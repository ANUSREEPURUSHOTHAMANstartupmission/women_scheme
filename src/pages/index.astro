<style lang="scss" is:global>
	
	.button{
	  position: relative;
	  display: block;
	  width: 200px;
	  height: 45px;
	  line-height: 40px;
	  color: #E8AD55;
	  font-size: 16px;
	  font-weight: 700;
	  text-align: center;
	  text-transform: uppercase;
	  overflow: hidden;
	  border-radius: 50px;
	  border: 2px solid #E8AD55;
	  transition: all 2s ease;
  
	  &:hover{
		color: #fff;
		position: relative;
		z-index: 1;
  
		&::before{
		  left: 0%;
		  right: auto;
		  width: 100%;
		  z-index: -1;
		}
  
		&::after{
  
		}
	  }
  
	  &::before{
		position: absolute;
		top: 0px;
		right: 0px;
		height: 100%;
		width: 0px;
		content: '';
		background: #E8AD55;
		color: #fff;
		transition: all 0.4s cubic-bezier(0.42, 0, 0.58, 1);
	  }
  
	  &::after{
		content: "";
		position: absolute;
		height: 0%;
		left: 50%;
		top: 50%;
		width: 150%;
		transition: all 0.75s ease 0s;
	  }
	}
  </style>